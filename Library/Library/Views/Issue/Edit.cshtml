@model Library.Models.Issue

@{
    ViewData["Title"] = "Edit Issue";
    Layout = "MainLayout";
}

<h1>Edit Issue</h1>

<h4>Issue</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input asp-for="IssueID" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Ititle" class="control-label"></label>
                <input asp-for="Ititle" class="form-control" />
                <span asp-validation-for="Ititle" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="Iauthor" class="control-label"></label>
                <input asp-for="Iauthor" class="form-control" />
                <span asp-validation-for="Iauthor" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="IssuePeriod" class="control-label"></label>
                <input asp-for="IssuePeriod" class="form-control" />
                <span asp-validation-for="IssuePeriod" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <label asp-for="Due" class="control-label"></label>
                <input asp-for="Due" type="checkbox" />
                <span asp-validation-for="Due" class="text-danger"></span>
            </div><br>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
