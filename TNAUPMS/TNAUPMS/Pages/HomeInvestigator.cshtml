@page
@model TNAUPMS.Pages.HomeDirector
@{
    ViewData["Title"] = "TNAU Project Monitoring System";
}

@{
    Layout = "Shared/_Layoutuser.cshtml";
}
<div class="header-body">
    <div class="header-body-left">
        <h3 class="page-title">Dashboard</h3>
    </div>
</div>

<div class="row">
    <div class="col-md-6">

<div class="card">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h6>Science Wise Project</h6>
            <div class="slick-single-arrows">
                <a class="btn btn-outline-light btn-sm">
                    <i class="ti-angle-left"></i>
                </a>
                <a class="btn btn-outline-light btn-sm">
                    <i class="ti-angle-right"></i>
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model.scienceModel)
                {
                    <div class="col-4">
                        <div class="card border mb-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div>
                                <div class="icon-block icon-block-sm bg-success icon-block-floating mr-2">
                                    <i class="fa fa-money"></i>
                                </div>
                            </div>
                            <span class="text-uppercase font-size-11">@item.keyCode</span>
                            
                        </div>
                        <div style="text-align:center;">
                            <h3 class="mb-0 ml-auto font-weight-bold text-primary">@item.projectCount</h3>
                        </div>
                        <div class="progress" style ="height:15px;">
                            <h5 class="font-size-15">@item.projectValue</h5>
                        </div>
                    </div>
                </div>
            </div>
            }
            }
        </div>
    </div>
</div>
</div>
<div class="col-md-6">
    <div class="card">
    <div class="card-body">
        <div class="card-title d-flex justify-content-between align-items-center">
            <h6>Funding Agency Wise Project</h6>
            <div class="slick-single-arrows">
                <a class="btn btn-outline-light btn-sm">
                    <i class="ti-angle-left"></i>
                </a>
                <a class="btn btn-outline-light btn-sm">
                    <i class="ti-angle-right"></i>
                </a>
            </div>
        </div>
        <div class="row">
            @if (Model != null)
            {
                foreach (var item in Model.fundModel)
                {
                    <div class="col-4">
                        <div class="card border mb-0">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div>
                                <div class="icon-block icon-block-sm bg-success icon-block-floating mr-2">
                                    <i class="fa fa-money"></i>
                                </div>
                            </div>
                            <span class="text-uppercase font-size-11">@item.keyCode</span>
                            
                        </div>
                        <div style="text-align:center;">
                            <h3 class="mb-0 ml-auto font-weight-bold text-primary">@item.projectCount</h3>
                        </div>
                        <div class="progress" style ="height:15px;">
                            <h5 class="font-size-15">@item.projectValue</h5>
                        </div>
                    </div>
                </div>
            </div>
            }
            }
        </div>
    </div>
</div>
</div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h6 class="card-title">Institution Wise Project</h6>
                <div class="table-responsive">
                    <table class="table m-b-0">
                        <thead>
                            <tr>
                                <th>SNo</th>
                                <th>Institution</th>
                                <th class="text-right">Project Count</th>
                                <th class="text-right">Total Budget</th>
                            </tr>
                        </thead>
                        <tbody>
                             @if (Model != null)
            {
                                var i = 0;
                                foreach (var item in Model.instModel)
                {
                    { i++; }
                      <tr>
                                <td>@(i.ToString())</td>
                                <td>@item.keyName</td>
                                <td class="text-success text-right">@item.projectCount</td>
                                <td class="text-success text-right">@item.projectValue</td>
                            </tr>
            }
            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
